CREATE TABLE `kredo_japan`.`employees` (`id` INT(11) NOT NULL AUTO_INCREMENT , `first_name` VARCHAR(50) NOT NULL , `last_name` VARCHAR(50) NOT NULL , `salary` FLOAT(8,2) NOT NULL , `department` VARCHAR(50) NOT NULL , PRIMARY KEY (`id`))

CREATE---
INSERT INTO `employees` (`first_name`,`last_name`,`salary`,`department`) VALUES ('John','Davis','20500','Audit'),('Emily','Jackson','32000','Legal'),('Jack','Dawson','31000','Legal'),('Jack','Smith','21000','Human Resorces'),('Janet','Jackson','40500','IT'),('Rose','Thompson','36500','Audit');


READ--
SELECT * FROM `employees` ------get all columns and records

SELECT `first_name`,`salary`,`department` FROM `employees`-----get specific columns and all records


SELECT `first_name`,`last_name`,`department` FROM `employees` WHERE `first_name` = "Jack"----get specific columns and allspecific records


SELECT * FROM `employees` WHERE `id` = 2;---get single record


UPDATE----
UPDATE `employees`SET`last_name` = 'Dawson' WHERE id = 6;-----update specific column and record


UPDATE `employees`SET`salary` = '41000',`department` = 'IT' WHERE id = 2----update specific columns and single record

DELETE---
DELETE FROM `employees` WHERE id =1-----delete single record


aggregate function----
count()--
SELECT COUNT(*)FROM`employees`;---return number of records
SELECT COUNT(*)FROM`employees` WHERE `department`='IT'; 
--returns number of records for specific column


SELECT MAX(salary) FROM `employees`;
--returns the maximum salary
SELECT MIN(salary) FROM `employees`;
--returns the minimum salary


SELECT `first_name`, `last_name`, `salary` FROM `employees` WHERE salary = (SELECT MAX(salary) FROM `employees`);
---return the biggest salary 

SELECT `first_name`, `last_name`, `salary` FROM `employees` WHERE salary = (SELECT MIN(salary) FROM `employees`);
---return the lowest salary v


SELECT * FROM `employees`ORDER BY id DESC;

SELECT * FROM `employees`ORDER BY salary ASC;

SELECT * FROM `employees`ORDER BY last_name DESC;